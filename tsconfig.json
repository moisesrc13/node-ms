{
  "compilerOptions": {
    "baseUrl": ".",       
    "paths": { "*": ["types/*"] },
    "types": [        
      "node"
    ],
    "lib": [
      "es6",
      "esnext",
      "dom",
      "es2016"
    ],
    "strict": false,
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "declaration": true      
  },
  "files": [
    "./node_modules/@types/node/index.d.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./tests/**/*",
    //"./src/**/*.spec.ts"
  ]
}
